<Window x:Class="SpellGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:autoComplete="clr-namespace:SpellGallery.AutoComplete"
        xmlns:editors="http://wpfcontrols.com/"
        mc:Ignorable="d"
        Title="Spell Gallery" Height="710" Width="800" ResizeMode="CanMinimize" Loaded="Window_Loaded" Unloaded="Window_Unloaded">
    <Window.Resources>
        <autoComplete:CardsProvider x:Key="CardsProvider"/>
    </Window.Resources>
    <Grid>
        <Label Content="Card Search:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="SemiBold"/>
        <editors:AutoCompleteTextBox x:Name="CardNameTextBox" Watermark="Please enter a card name." HorizontalAlignment="Left" Margin="115,14,0,0" VerticalAlignment="Top" Width="357" KeyUp="CardNameTextBox_KeyUp" FontSize="16" Provider="{StaticResource ResourceKey=CardsProvider}" />
        <Button x:Name="GoButton" Content="Go" HorizontalAlignment="Left" Margin="477,13,0,0" VerticalAlignment="Top" Click="GoButton_Click" FontSize="16" Width="34"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden" Width="457"  Margin="10,51,0,20" HorizontalAlignment="Left" Grid.ColumnSpan="2">
            <Grid x:Name="ThumbnailGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="143"></ColumnDefinition>
                    <ColumnDefinition Width="143"></ColumnDefinition>
                    <ColumnDefinition Width="143"></ColumnDefinition>
                </Grid.ColumnDefinitions>
            </Grid>
        </ScrollViewer>
        <Label x:Name="SavedLabel" Content="Selected print saved!" HorizontalAlignment="Left" Margin="522,15,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,0.348" Foreground="Green" FontWeight="Bold" Opacity="0"/>
        <Image x:Name="PreviewImage" Height="359" Margin="395,51,12,0" VerticalAlignment="Top"/>
        <Label x:Name="BetaLabel" Content="This is BETA software." HorizontalAlignment="Left" Margin="612,600,0,0" VerticalAlignment="Top" Foreground="Red" FontWeight="Bold"/>
        <Button x:Name="SettingsButton" Content="Settings..." FontSize="16" HorizontalAlignment="Left" Margin="661,13,0,0" VerticalAlignment="Top" Width="86" Click="SettingsButton_Click"/>
    </Grid>
</Window>
